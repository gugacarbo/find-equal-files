{
	"name": "find-equal-files",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsx watch source/cli.tsx --path /test/data",
		"start": "tsc --watch",
		"go": "node dist/cli.js",
		"pretify": "prettier --write .",
		"test": "prettier --check . && ava"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@inkjs/ui": "^2.0.0",
		"ink": "^5.0.1",
		"ink-link": "^4.1.0",
		"ink-select-input": "^6.0.0",
		"ink-spinner": "^5.0.0",
		"meow": "^11.0.0",
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@ava/typescript": "^5.0.0",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^6.1.3",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"tsx": "^4.18.0",
		"typescript": "^5.0.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"typescript": {
			"extensions": [
				"tsx",
				"ts"
			],
			"rewritePaths": {
				"test/": "dist/test/"
			},
			"compile": false
		}
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}